<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="730.0" prefWidth="1175.0" stylesheets="@/css/mylibrary.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarium.gui.ListsController">
    <ComboBox fx:id="searchTypeComboBox" layoutX="183.0" layoutY="51.0" onAction="#changedSearchType" prefHeight="26.0" prefWidth="118.0">
    </ComboBox>
    <TextField fx:id="searchTextField" layoutX="319.0" layoutY="45.0" prefHeight="38.0" prefWidth="706.0">
        <font>
            <Font size="19.0" />
        </font>
        <cursor>
            <Cursor fx:constant="TEXT" />
        </cursor>
    </TextField>
    <Button layoutX="1036.0" layoutY="48.0" mnemonicParsing="false" onAction="#clickedSearchButton" prefHeight="32.0" prefWidth="68.0" text="Поиск">
        <effect>
            <Glow />
        </effect>
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
    <TableView id="searchTable" fx:id="searchTable" layoutX="183.0" layoutY="97.0" prefHeight="571.0" prefWidth="932.0" style="-fx-alignment: CENTER;">
        <effect>
            <Glow />
        </effect>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
   <Button layoutX="627.0" layoutY="677.0" mnemonicParsing="false" text="+" onAction="#addList">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
      <cursor>
         <Cursor fx:constant="OPEN_HAND" />
      </cursor>
   </Button>
</AnchorPane>
